{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist", 
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "paths": {
      "ml-knn": ["./src/types/ml-knn"]
    }
  },
  "include": ["src","src/tests", "src/types/express", "src/types/ml-knn"],
  "exclude": ["node_modules"]
}

