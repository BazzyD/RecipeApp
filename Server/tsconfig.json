{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src","src/tests", "src/types/express"],
  "exclude": ["node_modules"]
}
